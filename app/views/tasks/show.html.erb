<h1>id:<%= @task.id %>のタスク詳細</h1>
<table class="table table-bordered">
    <tr>
        <th>id</th>
        <td><%= @task.id %></td>
    </tr>
    <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
    </tr>
    <tr>
        <th>タスク</th>
        <td><%= @task.content %></td>
    </tr>
</table>

<%= link_to 'タスクの編集', edit_task_path(@task), class: "btn btn-default" %>
<% if current_user == @task.user %>
<%= link_to 'Task削除', @task, method: :delete, data: { confirm: '本当に削除していいですか？'}, class: "btn btn-danger" %>
<% end %>